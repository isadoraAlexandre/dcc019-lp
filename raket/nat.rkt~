#lang racket

(provide zero
         is-zero?
         suc
         pred)

; implementação dos números naturais usando o tipo nativo de Racket

#|
(define zero 0)

(define (is-zero? n)
  (zero? n))

(define (suc n)
  (+ n 1))

(define (pred n)
  (match n
    [0 0]
    [_ (- n 1)]))
|#

; implementação dos números naturais usando uma lista de 1's. assim:
  ; 0 = ()
  ; 1 = (1)
  ; 2 = (1 1)
  ; 3 = (1 1 1)
  ; ...

#|(define zero '())

(define (is-zero? n)
  (empty? n))

(define (suc n)
  (cons 1 n))

(define (pred n)
  (match n
    ['() '()]
    [(cons x xs) xs]))

